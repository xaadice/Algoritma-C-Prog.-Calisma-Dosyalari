#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
	int i,j;
    printf("kum saati yapimi :\n\n");
    for (i = 0; i < 4; i++) {
    for (j = 0; j < i + 1; j++) {
        printf(" ");
    }

    for (j = 4; j > i; j--) {
        printf("* ");
     }

    printf("\n");
    }

    for (i = 2; i >= 0; i--) {
    for (j = 0; j < i + 1; j++) {
    printf(" ");
        }

    for (j = 4; j > i; j--) {
        printf("* ");
        }

    printf("\n");
    }
}
   
int main() {
	//Kelebegin bir kanadi yapimi
	int i,j;
	for(i=1;i<=5;i++){
		for(j=1;j<=i;j++)
		{
			printf("*");
		}
		printf("\n");
	}
	for(i=1; i<=5;i++){
		for(j=5;j>=i;j--){
			printf("*");
		}
		printf("\n");
	}
	}
